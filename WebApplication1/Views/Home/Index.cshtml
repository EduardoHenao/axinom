@{
    var title = "Axinom test";
    ViewData["Title"] = title;
    var controller = "Upload";
    var action = "UploadFiles";
    var method = "post";
    var enctype = "multipart/form-data";
}
<div>
    <section>
        @using (Html.BeginForm(action, controller, FormMethod.Post, new { enctype = enctype }))
        { 
            <p>@title</p>
            <div class="form-group">
                <div class="col-md-3">
                    <p>Upload one or more files using this form:</p>
                    <input type="file" name="files" multiple/>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">
                    <input type="submit" />
                </div>
            </div>
        }
    </section>
</div>
